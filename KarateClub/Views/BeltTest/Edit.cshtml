@model KarateClub.Core.ViewModel.BeltTestBeltRankInstructorPaymentMemberPersonViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BeltTestBeltRankInstructorPaymentMemberPersonViewModel</h4>
<hr />
<div class="card" style="width:50%;">
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PaymentId" />
            <div class="form-group">
                <label asp-for="MemberId" class="control-label"></label>
                <select asp-for="MemberId" class="form-control"
                        asp-items="@(new SelectList(Model.Members, "MemberPersonBeltRankViewModelId", "Name"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="TestedByInstructorId" class="control-label"></label>
                <select asp-for="TestedByInstructorId" class="form-control"
                        asp-items="@(new SelectList(Model.Instructors, "Id", "Name"))"></select>
                <span asp-validation-for="TestedByInstructorId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="RankId" class="control-label"></label>
                <select asp-for="RankId" class="form-control"
                        asp-items="@(new SelectList(Model.BeltRanks, "RankId", "RankName"))"></select>
                <span asp-validation-for="RankId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Result" class="control-label"></label>
